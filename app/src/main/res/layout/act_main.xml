<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:ignore="MissingDefaultResource">

    <data></data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false">

        <FrameLayout
            android:id="@+id/viewContentPanel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/lin" />

        <LinearLayout
            android:id="@+id/lin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_alignParentBottom="true"
            android:background="#fff"
            android:elevation="@dimen/dp_5"
            android:gravity="bottom"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_tab_one"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|center_horizontal"
                android:orientation="vertical"
                android:tag="0">

                <ImageView
                    android:id="@+id/iv_tab_one"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/tv_tab_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:paddingBottom="2dp"
                    android:text="首页"
                    android:textColor="@color/color_84849A"
                    android:textSize="@dimen/sp_10" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_tab_hy"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|center_horizontal"
                android:orientation="vertical"
                android:tag="1">

                <ImageView
                    android:id="@+id/iv_tab_hy"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/tv_tab_hy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingBottom="2dp"
                    android:text="货源"
                    android:textColor="@color/color_84849A"
                    android:textSize="@dimen/sp_10" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/ll_tab_two"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:tag="2">

                <ImageView
                    android:id="@+id/iv_tab_two"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_above="@+id/tv_tab_two"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/tv_tab_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:paddingBottom="2dp"
                    android:text="运单"
                    android:textColor="@color/color_84849A"
                    android:textSize="@dimen/sp_10" />

                <TextView
                    android:id="@+id/tv_tab_two_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/dp_m_12"
                    android:layout_toRightOf="@+id/iv_tab_two"
                    android:background="@drawable/shape_orange_red_oval"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_2"
                    android:paddingRight="@dimen/dp_2"
                    android:text="9"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/sp_11"
                    android:textStyle="bold"
                    android:visibility="gone"
                    />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_tab_five"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|center_horizontal"
                android:orientation="vertical"
                android:tag="3">

                <ImageView
                    android:id="@+id/iv_tab_five"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/tv_tab_five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingBottom="2dp"
                    android:text="我的"
                    android:textColor="@color/color_84849A"
                    android:textSize="@dimen/sp_10" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>