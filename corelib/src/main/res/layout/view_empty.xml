<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_waybill_empty"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_210"
        android:layout_margin="@dimen/dp_12"
        android:background="@drawable/shape_bg_while_10"
        android:drawableTop="@mipmap/no_order_img"
        android:gravity="center"
        android:paddingTop="@dimen/dp_30"
        android:paddingBottom="@dimen/dp_30"
        android:text="暂无任务"
        android:textColor="@color/color_8E9095"
        android:textSize="@dimen/sp_14"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_data_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/errorIcon"
            android:layout_width="@dimen/dp_120"
            android:layout_height="wrap_content"
            android:src="@mipmap/no_data_img" />

        <TextView
            android:id="@+id/tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_33"
            android:layout_marginEnd="@dimen/dp_16"
            android:text="暂无内容"
            android:textColor="@color/color_8E9095"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>
</LinearLayout>

