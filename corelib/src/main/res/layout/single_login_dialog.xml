<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:gravity="center"
    android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_40"
                android:paddingBottom="@dimen/dp_24">

                <ImageView
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:src="@mipmap/ic_launcher"
                    android:layout_gravity="center_horizontal"
                    />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:layout_marginRight="@dimen/dp_24"
                    android:layout_marginTop="@dimen/dp_20"
                    android:gravity="center"
                    android:text="您的账号已在其他地点登录"
                    android:textColor="@color/txt_defaul_color_driver"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="如果你没有进行该操作，请立即修改登录密码并反馈给客服人员"
                    android:textColor="@color/color_8E9095"
                    android:textSize="@dimen/sp_16" />
                <TextView
                    android:id="@+id/postiveBtn"
                    android:layout_width="@dimen/dp_184"
                    android:layout_height="@dimen/dp_48"
                    android:layout_marginTop="@dimen/dp_50"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="关闭"
                    android:textColor="@color/color_636979"
                    android:textSize="@dimen/sp_16"
                    android:background="@drawable/shape_bg_edf1fc_5"
                    />
            </LinearLayout>

        </LinearLayout>

</LinearLayout>